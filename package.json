{
  "name": "node-starter",
  "private": true,
  "version": "0.0.1",
  "description": "Node.js starter project",
  "keywords": [
    "boilerplate",
    "nodejs",
    "starter"
  ],
  "author": "Inverse Labs <labs@inverse.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/node-starter.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "homepage": "https://github.com/invrs/node-starter#readme",
  "scripts": {
    "build": "next build",
    "dev": "node server.js",
    "export": "next export",
    "fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "start": "NODE_ENV=production node server.js",
    "test": "jest test"
  },
  "devDependencies": {
    "babel-cli": "6",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-plugin-styled-components": "^1.5.1",
    "enzyme": "3",
    "enzyme-adapter-react-16": "1",
    "fxtr": "1",
    "jest": "^22.4.3",
    "rimraf": "2"
  },
  "dependencies": {
    "express": "4",
    "next": "4",
    "next-routes": "1",
    "react": "16",
    "react-dom": "16",
    "recompose": "0.26",
    "styled-components": "3"
  },
  "babel": {
    "plugins": [
      [
        "babel-plugin-styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ],
    "presets": [
      "next/babel"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    }
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testMatch": [
      "**/*Test.js"
    ]
  }
}
