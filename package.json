{
  "name": "node-starter",
  "private": true,
  "version": "0.0.1",
  "description": "Node.js starter project",
  "keywords": ["boilerplate", "nodejs", "starter"],
  "author": "Inverse Labs <labs@inverse.com>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/node-starter.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "homepage":
    "https://github.com/invrs/node-starter#readme",
  "scripts": {
    "build": "next build",
    "dev": "node server.js",
    "export": "next export",
    "fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "start": "NODE_ENV=production node server.js",
    "test": "jest test"
  },
  "devDependencies": {
    "babel-cli": "6",
    "babel-core": "6",
    "babel-eslint": "8",
    "babel-plugin-styled-components": "1",
    "eslint": "4",
    "eslint-config-prettier": "2",
    "eslint-plugin-prettier": "2",
    "eslint-plugin-react": "7",
    "fxtr": "1",
    "husky": "^0.15.0-rc.3",
    "jest": "22",
    "lint-staged": "6",
    "prettier": "1",
    "rimraf": "2"
  },
  "dependencies": {
    "express": "4",
    "next": "4",
    "next-routes": "1",
    "react": "16",
    "react-dom": "16",
    "recompose": "0.26",
    "styled-components": "3"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "modules": "commonjs"
            }
          ],
          "next/babel"
        ]
      }
    },
    "plugins": [
      [
        "styled-components",
        {
          "ssr": true,
          "displayName": true,
          "preprocess": false
        }
      ]
    ],
    "presets": ["next/babel"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "curly": "error",
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "max-len": [
        "error",
        {
          "code": 60,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": ["warn", "error"]
        }
      ],
      "quotes": ["error", "double"],
      "react/display-name": "off",
      "react/no-find-dom-node": "off",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "semi": ["error", "never"],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false
        }
      ],
      "sort-vars": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "strict": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "jest": {
    "setupFiles": ["./test/setup.js"],
    "testMatch": ["**/*Test.js"]
  },
  "lint-staged": {
    "*.{css,json,md}": ["prettier --write", "git add"],
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  }
}
